<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="site.luoyu.entity.ScEntity" table="sc" schema="hibernatelearn">
        <composite-id mapped="true" class="site.luoyu.entity.ScEntityPK">
            <key-property name="sno">
                <column name="Sno" sql-type="char(15)" length="15"/>
            </key-property>
            <key-property name="cno">
                <column name="Cno" sql-type="char(4)" length="4"/>
            </key-property>
        </composite-id>
        <property name="grade">
            <column name="Grade" sql-type="smallint(5)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>