<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="site.luoyu.entity.CourseEntity" table="course" schema="hibernatelearn">
        <id name="cno">
            <column name="Cno" sql-type="char(4)" length="4"/>
        </id>
        <property name="cname">
            <column name="Cname" sql-type="char(30)" length="30"/>
        </property>
        <property name="ccredit">
            <column name="Ccredit" sql-type="int(10)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>